<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item_genre"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_item_genre_material"
    app:cardBackgroundColor="@color/gray"
    app:cardCornerRadius="@dimen/cornerRadios_item_genre">

    <TextView
        android:id="@+id/item_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_genre_margin"
        android:gravity="center"
        android:paddingHorizontal="@dimen/padding_item_genre"
        android:text="@string/movie_genre"
        android:textColor="@color/color_item_genre"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</com.google.android.material.card.MaterialCardView>