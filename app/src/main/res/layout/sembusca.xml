<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/whidth_ic_not_found"
        android:layout_height="@dimen/height_ic_not_found"
        android:layout_marginStart="@dimen/mgStart_ic_not_found"
        android:layout_marginTop="@dimen/mgTop_ic_not_found"
        android:layout_marginEnd="@dimen/mgEnd_ic_not_found"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_not_found__1_" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="@dimen/whidth_filme_nao_existe"
        android:layout_height="@dimen/height_filme_nao_existe"
        android:layout_marginTop="@dimen/mgTop_filme_nao_existe"
        android:gravity="center|center_horizontal"
        android:text="@string/esse_filme_nao_existe"
        android:textColor="@color/genre_selected"
        android:textSize="@dimen/size_filme_nao_existe"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_goneMarginTop="@dimen/mgTop_filme_nao_existe" />

    <TextView
        android:layout_width="@dimen/whidth_filme_nao_encontrado"
        android:layout_height="@dimen/height_filme_nao_encontrado"
        android:layout_marginLeft="@dimen/mgLeft_filme_nao_encotrado"
        android:layout_marginTop="@dimen/mgTop_filme_nao_encontrado"
        android:layout_marginRight="@dimen/mgRight_filme_nao_encontrado"
        android:gravity="center_horizontal"
        android:text="@string/msg_filme_nao_existe"
        android:textColor="@color/color_sistema_falhou"
        android:textSize="@dimen/size_filme_nao_encontrado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</LinearLayout>