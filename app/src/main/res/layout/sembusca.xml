<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">


    <ImageButton
        android:id="@+id/btn_pesquisa2"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="35dp"
        android:background="#0D45494A"
        android:src="@drawable/ic_baseline_search_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editText" />


    <EditText
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="41dp"
        android:hint="Buscar Filme"
        android:inputType="text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_pesquisa2"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view2"
        android:layout_width="40dp"
        android:layout_height="6dp"
        android:layout_marginTop="37dp"
        android:background="@color/ic_baseline_horizontal_rule_24.xml"
        android:src="@drawable/ic_baseline_horizontal_rule_24"
        app:layout_constraintBottom_toTopOf="@+id/modoPesquisa"
        app:layout_constraintStart_toStartOf="@+id/btn_pesquisa2"
        app:layout_constraintTop_toBottomOf="@+id/btn_pesquisa2" />


    <TextView
        android:id="@+id/modoPesquisa"
        android:layout_width="217dp"
        android:layout_height="38dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="32dp"
        android:text="Modo pesquisa"
        android:textColor="#223334"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        tools:layout_editor_absoluteY="107dp" />

    <TextView
        android:id="@+id/voltar_inicio"
        android:layout_width="153dp"
        android:layout_height="21dp"
        android:text="Voltar ao início"
        android:textColor="#11C76F"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/modoPesquisa"
        app:layout_constraintTop_toBottomOf="@+id/modoPesquisa" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView3"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/voltar_inicio"
        app:layout_constraintTop_toBottomOf="@+id/voltar_inicio"
        tools:listitem="@layout/item_genre" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="67dp"
        android:layout_marginStart="161dp"
        android:layout_marginEnd="162dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView3"
        app:srcCompat="@drawable/ic_not_found__1_" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="212dp"
        android:layout_height="28dp"
        android:layout_marginTop="27dp"
        android:gravity="center|center_horizontal"
        android:text="Esse filme não existe"
        android:textColor="#223334"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_goneMarginTop="27dp" />

    <TextView
        android:layout_width="356dp"
        android:layout_height="43dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="11dp"
        android:gravity="center_horizontal"
        android:text="Não conseguimos encontrar o filme que voce procura. Por favor, refaça sua busca."
        android:textColor="#737599"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />




</androidx.constraintlayout.widget.ConstraintLayout>